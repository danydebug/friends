<%= form_with(model: @user) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br/>

  <div class="field form-group">
    <%= form.text_field :email,  class:"form-control", placeholder:"Email" %>
  </div>

  <br/>

  <div class="field form-group">
    <%= form.text_field :password, class:"form-control", placeholder:"Password" %>
  </div>

  <br/>
  
  <div class="field form-group">
    <%= form.text_field :password_confirmation, class:"form-control", placeholder:"Confirm password" %>
  </div>

  <br/>

  <div class="actions">
    <%= form.submit class:"btn btn-dark"%>
  </div>
<% end %>
